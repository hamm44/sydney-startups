<div class="company">
  <a class="close" href="#">Close</a>
  <h2><%= @company.name %></h2>
  <p><%= @company.description %></p>
  <p><a href="<%= @company.website %>"><%= @company.website %></a></p>
</div>

<script>
  $('a.close').click(function() {
    $('section.companies').animate({
      width: '100%',
      borderRadius: '0px',
      padding: '20px 50px 20px 50px;'
    }, 500, 'swing', function() {
      $('.company').hide();
    });
  });
</script>