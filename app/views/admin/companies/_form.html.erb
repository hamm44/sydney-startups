<%= link_to 'All Companies', admin_companies_path %>
<%= form_for [:admin, @company], :html => { :multipart => true } do |f| %>
  <p>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :description %>
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.label :website %>
    <%= f.text_field :website %>
  </p>
  <p>
    <%= f.file_field :logo %>
  </p>
    <% if @company.pending? %>
    <p>
      Enable?
      <%= check_box_tag 'enable', true %>
    </p>
    <% end %>
  <% unless @company.logo.blank? %>
    <p>
      <%= image_tag @company.logo.url(:thumb) %>
    </p>
  <% end %>
  <p>
    <%= f.submit 'Submit' %>
  </p>
<% end %>